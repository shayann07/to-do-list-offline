<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RemindersIOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Define the default app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="DarkCalendarViewTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorAccent">@color/darker_gray</item> <!-- Adjust colors -->
        <item name="android:textColorPrimary">#BAFFFFFF</item>
        <item name="android:textColorSecondary">#BAFFFFFF</item>
        <item name="android:background">@color/my_gray</item>
    </style>


    <style name="SearchViewHintStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for TextView Headers -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for RecyclerViews -->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:saveEnabled">true</item>
    </style>

    <!-- Divider View Style -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/my_gray</item>
    </style>


    <style name="ButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/textview_roundedcorners</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="thumbColor">@color/darker_gray</item>
    </style>

    <style name="Theme.RemindersIOS" parent="Base.Theme.RemindersIOS" />
</resources>