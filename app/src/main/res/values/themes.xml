<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===================== Base & Application Themes ===================== -->

    <!-- Base application theme inheriting from Material3 DayNight with no ActionBar.
         Customize your base theme here. -->
    <style name="Base.Theme.RemindersIOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Example customization: Uncomment to set primary color -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Default app theme that uses the base theme and sets an overflow menu style. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <!-- Custom overflow menu style to prevent overlap with anchor view. -->
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
    </style>

    <!-- Dark theme variant for calendar views, adjusting accent and text colors. -->
    <style name="DarkCalendarViewTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorAccent">@color/darker_gray</item> <!-- Adjust accent color -->
        <item name="android:textColorPrimary">#BAFFFFFF</item>
        <item name="android:textColorSecondary">#BAFFFFFF</item>
        <item name="android:background">@color/my_gray</item>
    </style>

    <!-- ===================== Widget & Text Styles ===================== -->

    <!-- SearchView hint text styling -->
    <style name="SearchViewHintStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Header text style for TextView headers -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for RecyclerViews: ensures consistent margins and initial visibility. -->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:saveEnabled">true</item>
    </style>

    <!-- Divider style for use between list items or sections -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/my_gray</item>
    </style>

    <!-- Style for button-like text elements -->
    <style name="ButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <!-- Style for title text elements -->
    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Container style for grouping UI elements with rounded corners -->
    <style name="ContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/textview_roundedcorners</item>
    </style>

    <!-- Style for text items within a list or similar component -->
    <style name="ItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for Switch components -->
    <style name="SwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="thumbColor">@color/darker_gray</item>
    </style>

    <!-- ===================== Final App Theme ===================== -->

    <!-- Final theme applied to the application -->
    <style name="Theme.RemindersIOS" parent="Base.Theme.RemindersIOS" />

</resources>